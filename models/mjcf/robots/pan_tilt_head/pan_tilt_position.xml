<mujoco model="franka_pan_tilt">
    <compiler angle="radian" meshdir="assets" autolimits="true"/>
    <option integrator="implicitfast"/>

    <default>
        <geom type="mesh" xyaxes="1 0 0 0 1 0"/>
        <joint armature="1" damping="2"/>
        <general forcerange="-30 30"/>
    </default>
    <asset>
        <mesh name="base" file="base.STL"/>
        <mesh name="link_1" file="link_1.STL"/>
        <mesh name="link_2" file="link_2.STL"/>
        <mesh name="camera" file="camera.STL"/>
    </asset>


    <worldbody>
        <body name="base" pos="-0.15 0.0 0.0">
            <geom mesh="base" mass="0.5"/>
            <body name="link_1" pos="-0.077 0.0 0.0" euler="0.0 0.0 0.0">
                <joint name="pan_joint" pos="0.15 0.0 0.1" axis="0 0 -1" limited="true" range="-2.78 2.78"/>
                <geom mesh="link_1" mass="1.3"/>
                <body name="link_2" pos="0.11 0.0 0.0">
                    <joint name="tilt_joint" pos="0.0 0.0 0.339" axis="1 0 0" limited="true" range="-1.76 1.76"/>
                    <geom mesh="link_2" mass="0.5"/>
                    <body name="camera" pos="-0.11 0.0 0.0">
                        <geom mesh="camera" mass="2.5"/>
                        <camera name="vr_camera" pos="0 0 0.05" euler="0 0 0" fovy="60" mode="trackcom"/>
                    </body>
                </body>
            </body>
        </body>
    </worldbody>

	<actuator>
        <position name="pan_pos"
                    joint="pan_joint"
                    kp="200"
                    dampratio="1"
                    ctrlrange="-2.78 2.78"
                    forcerange="-30 30"/>

        <position name="tilt_pos"
                    joint="tilt_joint"
                    kp="200"
                    dampratio="1"
                    ctrlrange="-1.76 1.76"
                    forcerange="-30 30"/>
        </actuator>


	<contact>
		<exclude body1="base" body2="link_1"/>
		<exclude body1="link_1" body2="link_2"/>
		<exclude body1="link_2" body2="camera"/>
	</contact>

    <keyframe>
        <key name="home" qpos="1.57079632679 0.0" ctrl="1.57079632679 0.0"/>
    </keyframe>



</mujoco>